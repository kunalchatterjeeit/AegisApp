      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
                <StackLayout VerticalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        Padding="20,10,0,10"
                        Spacing="20" BackgroundColor="#E79E28">

                    <Image Source="{Binding Image}"
                    WidthRequest="40"
                    HeightRequest="20"
                    VerticalOptions="Center" />
                    
                    <Label Text="{Binding Name}"
                    FontSize="Medium"
                    VerticalOptions="Center"
                    TextColor="Black"/>
